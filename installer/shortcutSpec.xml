<shortcuts>
	<skipIfNotSupported/>
	<defaultCurrentUser/>
	<programGroup defaultName="Horizon" location="startMenu"/>
	<shortcut
		name="Horizon Server"
		target="$INSTALL_PATH\horizon.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start Horizon server"
		iconFile="$INSTALL_PATH\html\ui\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no">
	</shortcut>	
	<shortcut
		name="Horizon Wallet"
		target="http://localhost:7776/index.html"
